# MCP Server Configuration
# ========================

# Allowed directory for file system access (if enabled)
MCP_ALLOWED_DIR=./data

{%- if values.enableDatabase %}

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
# Or for SQLite:
# DATABASE_URL=sqlite:///./data.db
{%- endif %}

{%- if values.enableGitHub %}

# GitHub Configuration
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
{%- endif %}

{%- if values.enableAuth %}

# OAuth Configuration (for HTTP transport)
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_ISSUER_URL=https://auth.yourcompany.com
{%- endif %}
